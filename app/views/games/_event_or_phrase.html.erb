<% n = 0 %>
<% games.each do |game| %>
	<% if play_today(game) %>
		<% unless n == 1 %>
			<%= game.event || phrase.line %>
			<% n = 1 %>
		<% end %>	
	<% elsif !play_today(game) %>
		<% unless n == 1 || game.date.localtime.strftime("%_m/%d")[1..-1] < time_minus_five.strftime("%_m/%d")[1..-1] %>
			<%= @countdown_phrase.line %>
			<% n = 1 %>
		<% end %>
	<% end %>
<% end %>
	