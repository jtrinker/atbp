<div class="large-6 columns largeleft" data-equalizer-watch>

		<div class="event-section large-12 columns">
				<div class="row container">
					<div class="medium-12 columns">
							<h3 class="event-header">today's event:</h3>
							<h2 class="event-subheader">
								<% games.each do |game| %>
									<% if play_today(game) %>
										<%= game.event %>
									<% end %>
								<% end %>	
							</h2>
					</div>
			</div>
		</div>

		<div class="social-section large-12 columns">
				<div class="row container">
			<div class="medium-12 columns">
					<h3 class="social-header">tell everybody!</h3>

					<div class="large-10 columns large-centered medium-10 medium-centered">
							<ul class="social-ul small-block-grid-4">
								<li>
									<span class='symbol social-icon'>&#xe300;</span>
								</li>

								<li>
									<span class='symbol social-icon'>&#xe227;</span>
								</li>

								<li>
									<span class='symbol social-icon'>&#xe286;</span>
								</li>

								<li>
									<span class='symbol social-icon'>&#xe224;</span>
								</li>
							</ul>
					</div>
			</div>
	</div>
		</div>

</div>
